/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 150px;
  position: relative;
}
.usermotto .line {
  display: flex;
  margin-top: 15rpx;
}
.usermotto .line .title {
  margin-right: 15rpx;
}
.ti-shi {
  color: red;
  font-size: 25rpx;
  position: absolute;
}
.btn {
  margin-top: 70rpx;
}